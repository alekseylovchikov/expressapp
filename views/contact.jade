extends layout

block content
  .container
    h1 #{title} page

    form(method='post', action='contact/send')
      .row
        .col-md-6
          label Name    
          input.form-control(type='text', name='username', placeholder='Type your name')
        .col-md-6
          label E-mail    
          input.form-control(type='text', name='email', placeholder='Type your email')
        .col-md-12
          label Message    
          textarea.form-control(name='message', placeholder='Type your message')
        .col-md-12
          br
          button.btn.btn-success(type='submit') Send